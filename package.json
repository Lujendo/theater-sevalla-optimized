{
  "name": "theater-equipment-catalog",
  "private": true,
  "version": "1.0.2",
  "type": "module",
  "description": "Theater Equipment Catalog Management System - Vite React Frontend with Node.js Backend",
  "main": "server/index.js",
  "scripts": {
    "dev": "cd server && npm run dev",
    "build": "npm run install-server && cd client && npm install && npm run build && cd .. && cp -r client/dist .",
    "preview": "vite preview",
    "start": "node server/index.js",
    "server": "node server/index.js",
    "install-server": "cd server && npm install --only=production",
    "postinstall": "npm run install-server",
    "dev:client": "cd client && npm run dev",
    "dev:both": "concurrently \"cd server && npm run dev\" \"cd client && npm run dev\"",
    "dev:setup": "node scripts/dev-setup.js",
    "dev:reset": "rm -f local_theater.db && npm run dev",
    "dev:backup": "cp local_theater.db backups/local_theater_$(date +%Y%m%d_%H%M%S).db"
  },
  "dependencies": {
    "@tanstack/react-query": "^4.29.5",
    "axios": "^1.4.0",
    "clsx": "^1.2.1",
    "date-fns": "^4.1.0",
    "file-saver": "^2.0.5",
    "html5-qrcode": "^2.3.8",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-barcode-reader": "^0.0.2",
    "react-datepicker": "^8.4.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.8.0",
    "react-router-dom": "^6.11.1",
    "react-toastify": "^11.0.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "eslint": "^8.39.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2",
    "vite": "^4.3.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "theater",
    "equipment",
    "catalog",
    "management",
    "react",
    "vite",
    "nodejs"
  ],
  "author": "Theater Management",
  "license": "MIT"
}